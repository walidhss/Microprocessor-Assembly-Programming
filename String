.model small
.stack 100h
.data

msg db 'Walid Hasan $' //string

.code

main proc  
     
     ;1->single key input
     ;2->single character output
     ;9->character string output   
     
     mov ax,@data
     mov ds,ax
     
     mov ah,9  //print string
     lea dx,msg
     int 21h  
     
     mov ah,1  //take single character input
     int 21h
     mov bl,al
     
     mov ah,2    ///print single character
     int 21h
     mov dl,bl
     int 21h
    
    
    
    
    exit:
    mov ah,4ch    //exit from DOS
    int 21h
    main endp
end main
